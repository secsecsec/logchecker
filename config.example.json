{
  "storage": "memory",
  "sender": {
    "user": "user@host.com",
    "password": "password",
    "host": "smtp.host.com",
    "addr": "smtp.host.com:25"
  },
  "observed": [
    {
      "name": "My service #1",
      "files": [
        {
          "file": "/var/log/nginx/error.log",
          "pattern": "ERROR",
          "increase": true,
          "emails": ["user_1@host.com", "user_2@host.com"],
          "boundary": 1,
          "period": 3600,
          "limit": 3
        },
        {
          "file": "/var/log/nginx/access.log",
          "pattern": "HTTP/1.1\" 500",
          "increase": true,
          "emails": ["user_1@host.com"],
          "boundary": 2,
          "period": 7200,
          "limit": 2
        }
      ]
    },
    {
      "name": "My service #2",
      "files": [
        {
          "file": "/var/log/syslog",
          "pattern": "My service error",
          "increase": false,
          "emails": ["user_1@host.com", "user_2@host.com"],
          "boundary": 1,
          "period": 3600,
          "limit": 6
        }
      ]
    }
  ]
}
