{
  "storage": "memory",
  "sender": {
    "user": "user@host.com",
    "password": "password",
    "host": "smtp.host.com",
    "addr": "smtp.host.com:25"
  },
  "observed": [
    {
      "name": "Nginx",
      "files": [
        {
          "file": "/var/log/nginx/error.log",
          "delay": 180,
          "pattern": "",
          "boundary": 1,
          "increase": true,
          "emails": ["user_1@host.com", "user_2@host.com"],
          "limits": [10, 20, 100]
        },
        {
          "file": "/var/log/nginx/access.log",
          "delay": 600,
          "pattern": "HTTP/1.1\" 500",
          "boundary": 2,
          "increase": true,
          "emails": ["user_1@host.com"],
          "limits": [2, 24, 168]
        }
      ]
    },
    {
      "name": "My service",
      "files": [
        {
          "file": "/var/log/syslog",
          "delay": 300,
          "pattern": "My service error",
          "boundary": 1,
          "increase": false,
          "emails": ["user_1@host.com", "user_2@host.com"],
          "limits": [6, 120, 300]
        }
      ]
    }
  ]
}
